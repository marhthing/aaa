  "dependencies": [],
  "commands": [
    {
      "name": "help",
      "description": "Show available commands and help information",
      "usage": "help [command]",
      "ownerOnly": false,
      "examples": [".help", ".help ping"]
    },
    {
      "name": "info",
      "description": "Display bot information and statistics",
      "usage": "info",
      "ownerOnly": true,
      "examples": [".info"]
    },
    {
      "name": "status",
      "description": "Show bot system status",
      "usage": "status",
      "ownerOnly": true,
      "examples": [".status"]
    },
    {
      "name": "settings",
      "description": "Show current bot settings and configuration",
      "usage": "settings",
      "ownerOnly": true,
      "examples": [".settings"]
    },
    {
      "name": "allow",
      "description": "Allow a user to execute specific commands",
      "usage": "allow <command>",
      "ownerOnly": true,
      "examples": [".allow ping", ".allow help"]
    },
    {
      "name": "disallow",
      "description": "Remove user's command permissions",
      "usage": "disallow <command>",
      "ownerOnly": true,
      "examples": [".disallow ping"]
    },
    {
      "name": "reload",
      "description": "Reload plugins or specific components",
      "usage": "reload [plugin]",
      "ownerOnly": true,
      "examples": [".reload", ".reload ping"]
    },
    {
      "name": "env",
      "description": "Manage environment variables",
      "usage": "env <list|get|set|remove> [key] [value]",
      "ownerOnly": true,
      "examples": [".env list", ".env get BOT_NAME", ".env set DEBUG true"]
    },
    {
      "name": "shutdown",
      "description": "Safely shutdown the bot",
      "usage": "shutdown",
      "ownerOnly": true,
      "examples": [".shutdown"]
    },
    {
      "name": "restart",
      "description": "Restart the bot (creates new process)",
      "usage": "restart",
      "ownerOnly": true,
      "examples": [".restart"]
    },
    {
      "name": "menu",
      "description": "Display organized command menu with categories",
      "usage": "menu",
      "ownerOnly": false,
      "examples": [".menu"]
    }
  ],
